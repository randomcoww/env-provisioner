<domain type='kvm'>
  <name>worker-1</name>
  <memory unit='GiB'>16</memory>
  <currentMemory unit='GiB'>16</currentMemory>
  <vcpu placement='static'>4</vcpu>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <kernel>/var/lib/tftpboot/coreos_production_pxe.vmlinuz</kernel>
    <initrd>/var/lib/tftpboot/coreos_production_pxe_image.cpio.gz</initrd>
    <cmdline>coreos.first_boot=1 coreos.config.url=http://192.168.126.242/ignition?ign=worker-1 console=hvc0 coreos.autologin elevator=noop</cmdline>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
    <vmport state='off'/>
  </features>
  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='4' threads='1'/>
    <cache level='3' mode='emulate'/>
  </cpu>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <controller type='usb' model='none'/>
    <disk type='block' device='disk'>
      <driver name='qemu' type='raw' cache='none' io='threads' discard='unmap'/>
      <source dev='/dev/zvol/pv/cache'/>
      <target dev='sda' bus='scsi'/>
    </disk>
    <interface type='direct' trustGuestRxFilters='yes'>
      <mac address='52:54:00:1a:61:1b'/>
      <source dev='int0' mode='bridge'/>
      <model type='virtio-net'/>
      <boot order='1'/>
    </interface>
    <interface type='direct' trustGuestRxFilters='yes'>
      <source dev='int1' mode='bridge'/>
      <model type='virtio-net'/>
    </interface>    
    <console>
      <target type='virtio'/>
    </console>
    <channel type='spicevmc'>
      <target type='virtio' name='com.redhat.spice.0'/>
      <address type='virtio-serial'/>
    </channel>
    <memballoon model='virtio'/>
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
    </rng>
  </devices>
</domain>
